# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
# Local (development): use SQLite
DATABASE_PATH=./civic_education.db
# Production (Heroku, etc.): use external DB (PostgreSQL recommended)
# Heroku sets DATABASE_URL automatically; configure via 'heroku config:set'

# Session Configuration
SESSION_SECRET=change-this-to-a-long-random-string-in-production

# Application Settings
APP_NAME=Civic Education Nepal
PASSING_SCORE=70
MAX_CONCURRENT_USERS=100
ADAPTIVE_QUIZ_QUESTION_COUNT=12

# Optional: External logging service (e.g., Sentry)
# SENTRY_DSN=https://your-sentry-dsn
