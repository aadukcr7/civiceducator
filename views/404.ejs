<%- include('partials/header') %>

<main class="flex-grow-1 d-flex align-items-center justify-content-center">
  <div class="container">
    <div class="text-center error-page">
      <h1 class="display-1"><i class="bi bi-exclamation-triangle-fill text-warning"></i> 404</h1>
      <h2>Page Not Found</h2>
      <p class="lead mb-4">
        <% if (typeof error !== 'undefined') { %>
          <%= error %>
        <% } else { %>
          The page you're looking for doesn't exist.
        <% } %>
      </p>
      <a href="/" class="btn btn-primary btn-lg"><i class="bi bi-house-door"></i> Go Home</a>
      <a href="/dashboard" class="btn btn-outline-primary btn-lg ms-2"><i class="bi bi-speedometer2"></i> Dashboard</a>
    </div>
  </div>
</main>

<%- include('partials/footer') %>
