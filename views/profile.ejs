<%- include('partials/header', { title: 'Profile' }) %>

<main class="flex-grow-1">
  <div class="container py-5">
    <div class="d-flex flex-wrap justify-content-between align-items-center mb-4 gap-2">
      <h1 class="mb-0">Your Profile</h1>
      <div class="d-flex gap-2">
        <a href="/dashboard" class="btn btn-outline-secondary">Back to Dashboard</a>
        <button type="button" class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#logoutConfirmModal">
          Logout
        </button>
      </div>
    </div>

    <% if (query && query.deleteError) { %>
      <div class="alert alert-danger"><%= query.deleteError %></div>
    <% } %>
    <% if (query && query.resetError) { %>
      <div class="alert alert-danger"><%= query.resetError %></div>
    <% } %>
    <% if (query && query.resetSuccess) { %>
      <div class="alert alert-success">Learning data reset successfully. Your account is unchanged.</div>
    <% } %>

    <div class="card mb-4">
      <div class="card-body">
        <div class="row g-3 align-items-center">
          <div class="col-12">
            <h4 class="mb-1"><%= user?.username || 'Learner' %></h4>
            <p class="mb-1 text-muted"><%= user?.email || '' %></p>
            <small class="text-muted">Joined: <%= user?.created_at ? new Date(user.created_at).toLocaleDateString() : '-' %></small>
          </div>
        </div>
      </div>
    </div>

    <div class="row g-3 mb-5">
      <div class="col-md-3 col-6">
        <div class="card h-100">
          <div class="card-body">
            <h6 class="text-muted mb-1">Levels Studied</h6>
            <h3 class="mb-0"><%= summary.levelsStudiedCount %></h3>
          </div>
        </div>
      </div>
      <div class="col-md-3 col-6">
        <div class="card h-100">
          <div class="card-body">
            <h6 class="text-muted mb-1">Lessons Studied</h6>
            <h3 class="mb-0"><%= summary.lessonsStudiedCount %></h3>
          </div>
        </div>
      </div>
      <div class="col-md-3 col-6">
        <div class="card h-100">
          <div class="card-body">
            <h6 class="text-muted mb-1">Levels Completed</h6>
            <h3 class="mb-0"><%= summary.levelsCompletedCount %></h3>
          </div>
        </div>
      </div>
      <div class="col-md-3 col-6">
        <div class="card h-100">
          <div class="card-body">
            <h6 class="text-muted mb-1">Quiz Attempts</h6>
            <h3 class="mb-0"><%= summary.totalAttempts %></h3>
          </div>
        </div>
      </div>
    </div>

    <div class="row g-4 mb-5">
      <div class="col-lg-6">
        <div class="card h-100">
          <div class="card-body">
            <h4 class="card-title">What You Studied</h4>
            <% if (studiedLevels && studiedLevels.length > 0) { %>
              <div class="table-responsive">
                <table class="table align-middle">
                  <thead>
                    <tr>
                      <th>Level</th>
                      <th>Lessons</th>
                      <th>Attempts</th>
                      <th>Best Score</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% studiedLevels.forEach((item) => { %>
                      <tr>
                        <td>
                          <a href="/levels/<%= item.id %>"><%= item.icon %> <%= item.title %></a>
                        </td>
                        <td><%= item.lessonsCount %></td>
                        <td><%= item.attemptsCount %></td>
                        <td><%= item.bestScore !== null ? item.bestScore + '%' : '--' %></td>
                      </tr>
                    <% }); %>
                  </tbody>
                </table>
              </div>
            <% } else { %>
              <p class="text-muted mb-0">You have not started any levels yet.</p>
            <% } %>
          </div>
        </div>
      </div>

      <div class="col-lg-6">
        <div class="card h-100">
          <div class="card-body">
            <h4 class="card-title">Quiz Performance Summary</h4>
            <div class="row g-3">
              <div class="col-6">
                <div class="border rounded p-3 h-100">
                  <div class="text-muted small">Passed Attempts</div>
                  <div class="h4 mb-0"><%= summary.passedAttempts %></div>
                </div>
              </div>
              <div class="col-6">
                <div class="border rounded p-3 h-100">
                  <div class="text-muted small">Average Score</div>
                  <div class="h4 mb-0"><%= summary.averageScore ? summary.averageScore + '%' : '--' %></div>
                </div>
              </div>
              <div class="col-6">
                <div class="border rounded p-3 h-100">
                  <div class="text-muted small">Best Score</div>
                  <div class="h4 mb-0"><%= summary.bestScoreOverall ? summary.bestScoreOverall + '%' : '--' %></div>
                </div>
              </div>
              <div class="col-6">
                <div class="border rounded p-3 h-100">
                  <div class="text-muted small">Questions Attempted</div>
                  <div class="h4 mb-0"><%= summary.totalQuestionsAttempted %></div>
                </div>
              </div>
              <div class="col-12">
                <div class="border rounded p-3 h-100">
                  <div class="text-muted small">Correct Answers</div>
                  <div class="h4 mb-0"><%= summary.totalCorrectAnswers %></div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="card">
      <div class="card-body">
        <h4 class="card-title mb-3">Quiz Attempts</h4>
        <% if (quizAttempts && quizAttempts.length > 0) { %>
          <div class="table-responsive">
            <table class="table align-middle">
              <thead>
                <tr>
                  <th>Date</th>
                  <th>Level</th>
                  <th>Score</th>
                  <th>Correct</th>
                  <th>Difficulty</th>
                  <th>Duration</th>
                </tr>
              </thead>
              <tbody>
                <% quizAttempts.forEach((attempt) => { %>
                  <tr>
                    <td><%= attempt.created_at ? new Date(attempt.created_at).toLocaleString() : '-' %></td>
                    <td><%= attempt.levelTitle %></td>
                    <td>
                      <span class="badge <%= Number(attempt.score) >= 70 ? 'bg-success' : 'bg-warning text-dark' %>">
                        <%= attempt.score %>%
                      </span>
                    </td>
                    <td><%= attempt.correct_count %>/<%= attempt.total_questions %></td>
                    <td class="text-capitalize"><%= attempt.difficulty || 'medium' %></td>
                    <td><%= attempt.duration_seconds %>s</td>
                  </tr>
                <% }); %>
              </tbody>
            </table>
          </div>
        <% } else { %>
          <p class="text-muted mb-0">No quiz attempts yet. Start a level and take a quiz to populate this section.</p>
        <% } %>
      </div>
    </div>

    <div class="row g-4 mt-1">
      <div class="col-lg-6">
        <div class="card border-warning h-100">
          <div class="card-body">
            <h4 class="card-title text-warning mb-3">Reset Learning Data</h4>
            <p class="text-muted">This clears your progress and quiz attempt history, but keeps your account.</p>

            <form id="resetLearningForm" method="POST" action="/auth/reset-learning-data" class="row g-3">
              <input type="hidden" name="_csrf" value="<%= csrfToken %>">
              <div class="col-12">
                <label for="resetEmail" class="form-label">Confirm Email</label>
                <input
                  type="email"
                  class="form-control"
                  id="resetEmail"
                  name="email"
                  placeholder="Enter your account email"
                  required
                  autocomplete="email"
                >
              </div>
              <div class="col-12">
                <label for="resetPassword" class="form-label">Confirm Password</label>
                <input
                  type="password"
                  class="form-control"
                  id="resetPassword"
                  name="password"
                  placeholder="Enter your password"
                  required
                  autocomplete="current-password"
                >
              </div>
              <div class="col-12">
                <button
                  type="button"
                  class="btn btn-warning"
                  data-bs-toggle="modal"
                  data-bs-target="#resetConfirmModal"
                >
                  Reset Learning Data
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>

      <div class="col-lg-6">
        <div class="card border-danger h-100">
          <div class="card-body">
            <h4 class="card-title text-danger mb-3">Delete Account</h4>
            <p class="text-muted">This permanently removes your account, progress, and quiz attempt history.</p>

            <form id="deleteAccountForm" method="POST" action="/auth/delete-account" class="row g-3">
              <input type="hidden" name="_csrf" value="<%= csrfToken %>">
              <div class="col-12">
                <label for="deleteEmail" class="form-label">Confirm Email</label>
                <input
                  type="email"
                  class="form-control"
                  id="deleteEmail"
                  name="email"
                  placeholder="Enter your account email"
                  required
                  autocomplete="email"
                >
              </div>
              <div class="col-12">
                <label for="deletePassword" class="form-label">Confirm Password</label>
                <input
                  type="password"
                  class="form-control"
                  id="deletePassword"
                  name="password"
                  placeholder="Enter your password"
                  required
                  autocomplete="current-password"
                >
              </div>
              <div class="col-12">
                <button
                  type="button"
                  class="btn btn-danger"
                  data-bs-toggle="modal"
                  data-bs-target="#deleteConfirmModal"
                >
                  Delete My Account
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="modal fade" id="logoutConfirmModal" tabindex="-1" aria-labelledby="logoutConfirmModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="logoutConfirmModalLabel">Confirm Logout</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          Are you sure you want to log out?
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <a href="/auth/logout" class="btn btn-danger">Yes, Log Out</a>
        </div>
      </div>
    </div>
  </div>

  <div class="modal fade" id="resetConfirmModal" tabindex="-1" aria-labelledby="resetConfirmModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="resetConfirmModalLabel">Confirm Reset</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          Reset all learning data? This cannot be undone.
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-warning" form="resetLearningForm">Yes, Reset Data</button>
        </div>
      </div>
    </div>
  </div>

  <div class="modal fade" id="deleteConfirmModal" tabindex="-1" aria-labelledby="deleteConfirmModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="deleteConfirmModalLabel">Confirm Account Deletion</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          Are you sure you want to permanently delete your account?
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-danger" form="deleteAccountForm">Yes, Delete Account</button>
        </div>
      </div>
    </div>
  </div>
</main>

<%- include('partials/footer') %>
