<%- include('../partials/header', { title: 'Admin Users' }) %>

<main class="flex-grow-1">
  <div class="container py-5">
    <div class="d-flex flex-wrap justify-content-between align-items-center mb-4">
      <h1 class="mb-0">Manage Users</h1>
      <a class="btn btn-outline-secondary" href="/admin">Back to Admin</a>
    </div>

    <% if (flash) { %>
      <div class="alert alert-info"><%= flash %></div>
    <% } %>

    <div class="table-responsive">
      <table class="table table-striped align-middle">
        <thead>
          <tr>
            <th>ID</th>
            <th>Username</th>
            <th>Email</th>
            <th>Status</th>
            <th>Created</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% if (users && users.length > 0) { %>
            <% users.forEach(user => { %>
              <tr>
                <td><%= user.id %></td>
                <td><%= user.username %></td>
                <td><%= user.email %></td>
                <td>
                  <% if (user.is_disabled) { %>
                    <span class="badge bg-danger">Disabled</span>
                  <% } else { %>
                    <span class="badge bg-success">Active</span>
                  <% } %>
                </td>
                <td><%= new Date(user.created_at).toLocaleDateString() %></td>
                <td>
                  <div class="d-flex flex-wrap gap-2">
                    <form method="POST" action="/admin/users/<%= user.id %>/toggle">
                      <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                      <input type="hidden" name="is_disabled" value="<%= user.is_disabled ? 1 : 0 %>">
                      <button class="btn btn-sm <%= user.is_disabled ? 'btn-success' : 'btn-warning' %>" type="submit">
                        <%= user.is_disabled ? 'Enable' : 'Disable' %>
                      </button>
                    </form>
                    <form method="POST" action="/admin/users/<%= user.id %>/reset-password">
                      <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                      <button class="btn btn-sm btn-outline-danger" type="submit">
                        Reset Password
                      </button>
                    </form>
                  </div>
                </td>
              </tr>
            <% }); %>
          <% } else { %>
            <tr>
              <td colspan="6">No users found.</td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
</main>

<%- include('../partials/footer') %>
