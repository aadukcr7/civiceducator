<%- include('../partials/header', { title: 'Manage Lessons' }) %>

<main class="flex-grow-1">
  <div class="container py-5">
    <div class="d-flex flex-wrap justify-content-between align-items-center mb-4">
      <h1 class="mb-0">Lessons: <%= level.title %></h1>
      <div class="btn-group">
        <a class="btn btn-outline-secondary" href="/admin/levels">Back to Levels</a>
        <a class="btn btn-primary" href="/admin/levels/<%= level.id %>/lessons/new">Add Lesson</a>
      </div>
    </div>

    <div class="table-responsive">
      <table class="table table-striped align-middle">
        <thead>
          <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% if (lessons && lessons.length > 0) { %>
            <% lessons.forEach(lesson => { %>
              <tr>
                <td><%= lesson.id %></td>
                <td><%= lesson.title %></td>
                <td>
                  <div class="d-flex flex-wrap gap-2">
                    <a class="btn btn-sm btn-outline-primary" href="/admin/levels/<%= level.id %>/lessons/<%= lesson.id %>/edit">Edit</a>
                    <form method="POST" action="/admin/levels/<%= level.id %>/lessons/<%= lesson.id %>/delete" onsubmit="return confirm('Delete this lesson?');">
                      <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                      <input type="hidden" name="page" value="<%= pagination?.page || 1 %>">
                      <button class="btn btn-sm btn-outline-danger" type="submit">Delete</button>
                    </form>
                  </div>
                </td>
              </tr>
            <% }); %>
          <% } else { %>
            <tr>
              <td colspan="3">No lessons yet.</td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>

    <% if (pagination && pagination.totalPages > 1) { %>
      <nav aria-label="Lessons pagination" class="mt-3">
        <ul class="pagination mb-0">
          <li class="page-item <%= pagination.hasPrev ? '' : 'disabled' %>">
            <a class="page-link" href="/admin/levels/<%= level.id %>/lessons?page=<%= pagination.page - 1 %>">Previous</a>
          </li>
          <li class="page-item disabled">
            <span class="page-link">Page <%= pagination.page %> of <%= pagination.totalPages %></span>
          </li>
          <li class="page-item <%= pagination.hasNext ? '' : 'disabled' %>">
            <a class="page-link" href="/admin/levels/<%= level.id %>/lessons?page=<%= pagination.page + 1 %>">Next</a>
          </li>
        </ul>
      </nav>
    <% } %>
  </div>
</main>

<%- include('../partials/footer') %>
