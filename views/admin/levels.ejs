<%- include('../partials/header', { title: 'Admin Levels' }) %>

<main class="flex-grow-1">
  <div class="container py-5">
    <div class="d-flex flex-wrap justify-content-between align-items-center mb-4">
      <h1 class="mb-0">Manage Levels</h1>
      <div class="btn-group">
        <a class="btn btn-outline-secondary" href="/admin">Back to Admin</a>
        <a class="btn btn-primary" href="/admin/levels/new">Add Level</a>
      </div>
    </div>

    <div class="table-responsive">
      <table class="table table-striped align-middle">
        <thead>
          <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Lessons</th>
            <th>Quiz Questions</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% if (levels && levels.length > 0) { %>
            <% levels.forEach(level => { %>
              <tr>
                <td><%= level.id %></td>
                <td><%= level.title %></td>
                <td><%= (level.lessons || []).length %></td>
                <td><%= (level.quiz || []).length %></td>
                <td>
                  <div class="d-flex flex-wrap gap-2">
                    <a class="btn btn-sm btn-outline-primary" href="/admin/levels/<%= level.id %>/edit">Edit</a>
                    <a class="btn btn-sm btn-outline-secondary" href="/admin/levels/<%= level.id %>/lessons">Lessons</a>
                    <a class="btn btn-sm btn-outline-secondary" href="/admin/levels/<%= level.id %>/quiz">Quiz</a>
                    <form method="POST" action="/admin/levels/<%= level.id %>/delete" onsubmit="return confirm('Delete this level?');">
                      <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                      <button class="btn btn-sm btn-outline-danger" type="submit">Delete</button>
                    </form>
                  </div>
                </td>
              </tr>
            <% }); %>
          <% } else { %>
            <tr>
              <td colspan="5">No levels found.</td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
</main>

<%- include('../partials/footer') %>
