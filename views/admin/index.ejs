<%- include('../partials/header', { title: 'Admin Panel' }) %>

<main class="flex-grow-1">
  <div class="container py-5">
    <div class="d-flex flex-wrap justify-content-between align-items-center mb-4">
      <h1 class="mb-0">Admin Panel</h1>
      <div class="btn-group">
        <a class="btn btn-outline-primary" href="/admin/levels">Manage Levels</a>
        <a class="btn btn-outline-primary" href="/admin/users">Manage Users</a>
      </div>
    </div>

    <div class="row g-4">
      <div class="col-md-4">
        <div class="stat-card">
          <div class="stat-content">
            <h3><%= stats.users %></h3>
            <h6>Total Users</h6>
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="stat-card">
          <div class="stat-content">
            <h3><%= stats.totalLevels %></h3>
            <h6>Total Levels</h6>
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="stat-card">
          <div class="stat-content">
            <h3><%= stats.totalLessons %></h3>
            <h6>Total Lessons</h6>
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="stat-card">
          <div class="stat-content">
            <h3><%= stats.totalQuestions %></h3>
            <h6>Total Quiz Questions</h6>
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="stat-card">
          <div class="stat-content">
            <h3><%= stats.completedCount %></h3>
            <h6>Completed Attempts</h6>
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="stat-card">
          <div class="stat-content">
            <h3><%= stats.averageScore %>%</h3>
            <h6>Average Score</h6>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>

<%- include('../partials/footer') %>
